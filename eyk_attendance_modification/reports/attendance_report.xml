<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_employee_attendance">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <div style="text-align: center;">
                        <span style="font-size: 25px;">Attendance Report for  </span>
                        <span style="font-size: 25px;">
                            <span t-esc="month" /> -
                            <span t-esc="year" />
                        </span><br/><br/>
                    </div>
                    <div class="oe_structure">
                        <t t-foreach="employee_ids" t-as="employee">
                            <div style="text-align: center;">
                                <span style="font-size: 20px;">
                                    <span>Employee:</span>
                                    <span t-esc="employee.name" />
                                </span>
                                <br/><br/>
                            </div><br/>
                            <div class="row">
                                <table class="table table-bordered ">
                                    <thead class="table-primary">
                                        <tr>
                                            <th scope="col">Check In</th>
                                            <th scope="col">Check Out</th>
                                            <th scope="col">Type</th>
                                            <th scope="col">Work Hours</th>
                                        </tr>
                                    </thead>
                                    <t t-foreach="docs" t-as="r">
                                        <t t-foreach="r" t-as="o">
                                            <t t-if = "o.employee_id.id == employee.id">
                                                <tr>
                                                    <t t-if="not o.employee_id">
                                                        <td>
                                                            <span> </span>
                                                        </td>
                                                    </t>
                                                    <t t-if="not o.check_in">
                                                        <td>
                                                            <span> </span>
                                                        </td>
                                                    </t>
                                                    <t t-if="o.check_in">
                                                        <t t-if="o.worked_hours">
                                                            <td >
                                                                <span t-field="o.check_in"/>
                                                            </td>
                                                        </t>
                                                    </t>
                                                    <t t-if="not o.check_out">
                                                        <td>
                                                            <span> </span>
                                                        </td>
                                                    </t>
                                                    <t t-if="o.check_out">
                                                        <t t-if="o.worked_hours">
                                                            <td >
                                                                <span t-field="o.check_out"/>
                                                            </td>
                                                        </t>
                                                    </t>
                                                    <t t-if="not o.type">
                                                        <td>
                                                            <span> </span>
                                                        </td>
                                                    </t>
                                                    <t t-if="o.type">
                                                        <t t-if="o.type">
                                                            <td >
                                                                <span t-field="o.type"/>
                                                            </td>
                                                        </t>
                                                    </t>
                                                    <t t-if="not o.worked_hours">
                                                        <td>
                                                            <span> </span>
                                                        </td>
                                                    </t>
                                                    <t t-if="o.worked_hours">
                                                        <t t-if="o.worked_hours">
                                                            <td >
                                                                <span t-field="o.worked_hours" t-options='{"widget": "float_time"}'/>
                                                            </td>
                                                        </t>
                                                    </t>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </table>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>